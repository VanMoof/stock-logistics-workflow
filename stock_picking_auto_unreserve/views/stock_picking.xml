<odoo>
    <record id="view_stock_picking_form" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="groups_id" eval="[(4, ref('group_stock_auto_unreserve'))]" />
        <field name="arch" type="xml">
            <button name="action_assign" position="after">
                <button
                    name="action_auto_unreserve_pickings"
                    type="object"
                    string="Unreserve others"
                    attrs="{'invisible': [('show_check_availability', '=', False)]}"
                />
            </button>
        </field>
    </record>
</odoo>
